@model CategoryUpdateModelView

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Ekle
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-2">
                <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3 form-group">
                            <label asp-for="Name" class="form-label">Kategori İsmi</label>
                            <input asp-for="Name" name="Name" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kategori İsmi" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <button class="btn btn-primary btn-block" type="submit">Güncelle <i class="bx bx-save"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@model List<CategoryModelView>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategoriler
    </h4>
    <!-- Basic Bootstrap Table -->
    <div class="card ">
        <div class="table-responsive text-nowrap m-3">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">Kategori Ekle <i class="bx bx-plus"></i></a>
            <table class="table table-bordered" id="categoriesTable" width="90%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturan</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedBy</td>
                            <td>@category.CreatedDate</td>
                            <td>@(category.IsDeleted == true ? "Silindi" : "Silinmedi")</td>
                            <td>
                                <a asp-route-categoryId="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" class="btn btn-primary btn-sm" data-id="@category.Id">Düzenle <i class="bx bxs-edit"></i></a>
                                <a asp-route-categoryId="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" class="btn btn-danger btn-sm" data-id="@category.Id">Sil<i class="bx bxs-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categoryIndex.js" type="text/javascript"></script>
}
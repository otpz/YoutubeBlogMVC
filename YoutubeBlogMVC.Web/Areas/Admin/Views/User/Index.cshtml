@model List<UserModelView>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategoriler
    </h4>
    <!-- Basic Bootstrap Table -->
    <div class="card ">
        <div class="table-responsive text-nowrap m-3">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">Kullanıcı Ekle <i class="bx bx-plus"></i></a>
            <table class="table table-bordered" id="usersTable" width="90%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon No</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Role</td>
                            <td>@(user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</td>
                            <td>@user.AccessFailedCount</td>
                            <td>
                                <a asp-route-userId="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" class="btn btn-primary btn-sm" data-id="@user.Id">Düzenle <i class="bx bxs-edit"></i></a>
                                <a asp-route-userId="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" class="btn btn-danger btn-sm" data-id="@user.Id">Sil<i class="bx bxs-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/userIndex.js" type="text/javascript"></script>
}
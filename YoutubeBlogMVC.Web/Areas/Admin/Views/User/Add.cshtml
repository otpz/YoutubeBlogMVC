@model UserAddModelView

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-2">
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red;"></div>
                    <div class="card-body">
                        
                        <div class="mb-3 form-group">
                            <label asp-for="FirstName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="FirstName" name="FirstName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Adı Giriniz" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="LastName" class="form-label">Kullanıcı Soyadı</label>
                            <input asp-for="LastName" name="LastName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Soyadı Giriniz" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Email" class="form-label">Kullanıcı Email</label>
                            <input asp-for="Email" name="Email" type="email" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Email Adresi Giriniz" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Password" class="form-label">Kullanıcı Parola</label>
                            <input asp-for="Password" name="Password" type="password" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Parola Giriniz" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon No</label>
                            <input asp-for="PhoneNumber" name="PhoneNumber" type="tel" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Telefon No Giriniz" aria-describedby="defaultFormControlHelp">
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="RoleId" class="form-label">Rol</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
                        </div>


                        <div class="mb-3 form-group">
                            <button class="btn btn-primary btn-block" type="submit">Ekle <i class="bx bx-plus"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

